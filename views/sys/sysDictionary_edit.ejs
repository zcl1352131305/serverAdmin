<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>数据字典管理</title>
    <%- include('../public/public_css') %>

</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            <a onclick="toInitPage('/sys/sysDictionary/init')">
                                <i class="fa fa-chevron-left"></i>
                            </a>
                            数据字典<%= editFlag=='add'?"新增":"编辑" %>
                        </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form id="form" action="/sys/sysDictionary/save" method="post" class="form-horizontal" accept-charset="UTF-8">
                            <input type="hidden" id="initPage" name="initPage" value="<%=initPage%>">
                            <input type="hidden" id="id" name="id" value="<%=data.id%>">
                            <input type="hidden" id="editFlag" name="editFlag" value="<%=editFlag%>">

							<div class="form-group">
								<label class="col-sm-2 control-label">名称</label>
								<div class="col-sm-10">
									<input type="text" name="name" class="form-control" value="<%=data.name%>" >
								</div>
							</div>
							<div class="hr-line-dashed"></div>
							<div class="form-group">
								<label class="col-sm-2 control-label">值</label>
								<div class="col-sm-10">
									<input type="text" name="val" class="form-control" value="<%=data.val%>" >
								</div>
							</div>
							<div class="hr-line-dashed"></div>
							<div class="form-group">
								<label class="col-sm-2 control-label">备注</label>
								<div class="col-sm-10">
									<input type="text" name="note" class="form-control" value="<%=data.note%>" >
								</div>
							</div>
							<div class="hr-line-dashed"></div>
							<div class="form-group">
								<label class="col-sm-2 control-label">是否开放</label>
								<div class="col-sm-10">
                                    <div class="radio i-checks">
                                        <label><input type="radio" value="1" name="isOpen" <%= data.isOpen=='1'?'checked':'' %>> <i></i>是</label>
                                        <label><input type="radio" value="0" name="isOpen" <%= data.isOpen=='0'?'checked':'' %>> <i></i>否</label>
                                    </div>
                                </div>
							</div>
							<div class="hr-line-dashed"></div>
							<div class="form-group">
								<label class="col-sm-2 control-label">类别</label>
								<div class="col-sm-10">
								    <select name="type" class="form-control">
                                        <option value="wslx" <%=data.type=="wslx"?"selected":""%>>文书类型</option>
                                        <option value="bmlx" <%=data.type=="bmlx"?"selected":""%>>部门类型</option>
                                        <option value="dwzxlx" <%=data.type=="dwzxlx"?"selected":""%>>对外资讯类型</option>
                                    </select>
                                </div>
							</div>
							<div class="hr-line-dashed"></div>


                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-primary" type="submit">保存内容</button>
                                    <button class="btn btn-white" onclick="toInitPage('/sys/sysDictionary/init')" type="button">取消</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../public/public_js') %>
    <!-- 自定义js -->
    <!-- 验证js -->
    <script src="/static/javascripts/plugins/validate/jquery.validate.min.js"></script>
    <script src="/static/javascripts/plugins/validate/messages_zh.min.js"></script>
    <script src="/static/javascripts/ValidatorDefault.js"></script>


    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });

        $().ready(function () {
            var icon = "<i class='fa fa-times-circle'></i> ";
            $("#form").validate({
				rules: {
					name: {
						maxlength:55,
					},
					val: {
						maxlength:55,
					},
					note: {
						maxlength:150,
					},
					isOpen: {
						maxlength:1,
					},
					type: {
						maxlength:55,
					},
				},
				messages: {
					name: {
						maxlength: icon + "必须55字符以下",
					},
					val: {
						maxlength: icon + "必须55字符以下",
					},
					note: {
						maxlength: icon + "必须150字符以下",
					},
					isOpen: {
						maxlength: icon + "必须1字符以下",
					},
					type: {
						maxlength: icon + "必须55字符以下",
					},
				},

            });
        });
    </script>


</body>

</html>
